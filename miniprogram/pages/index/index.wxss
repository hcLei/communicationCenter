/**index.wxss**/

.index-swiper{
  width: 100%;
}
.index-swiper image{
  width: 100%;
  height: 300rpx;
}
.list-type{
  margin: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.task-list{
  width: 100%;
}
.list-type-active{
  color: #1AAD19;
}
.list-container .list-item{
  padding: 20rpx;
  background: #fff;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}
.list-container .list-item:last-child{
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.list-container .user-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  float: left;
}
.list-container .item-content{
  margin-left: 120rpx;
}
.list-container .item-userName{
  color: #333;
  font-size: 32rpx;
  line-height: 100rpx;
}
.list-container .item-title{
  color: #666;
  font-size: 28rpx;
}
.list-container .item-viewCount{
  color: #999;
  font-size: 20rpx;
  margin-top: 20rpx;
}
.list-container .item-publishTime{
  color: #999;
  font-size: 20rpx;
  float: right;
  margin-top: 18rpx;
  margin-right: 20rpx;
}
.list-container .item-status{
  float: right;
  margin-right: 20rpx;
  padding-top: 30rpx;
}
.list-container .item-status-on{
  color: #1AAD19;
}
.list-container .item-status-done{
  color: #FF5777;
}
.content-onload{
  width: 100%;
  text-align: center;
  display: block;
  color: #333;
}
